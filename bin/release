#!/usr/bin/env bash
# bin/release <build-dir>

cat << EOF
addons: []
default_process_types:
  web:  ! 'JAVA_HOME=$PWD/.java-buildpack/jdk JAVA_OPTS="-Djava.io.tmpdir=$TMPDIR
    -XX:OnOutOfMemoryError=$PWD/.java-buildpack/jdk/bin/killjava.sh  -Xms750m -Xmx1024m
    -javaagent:$PWD/.java-buildpack/app_dynamics_agent/javaagent.jar -Dappdynamics.agent.applicationName=
    -Dappdynamics.agent.tierName=CloudFoundry -Dappdynamics.agent.nodeName=$(expr
    "$VCAP_APPLICATION" : ''.*instance_index[": ]*\([[:digit:]]*\).*'') -Dappdynamics.agent.accountAccessKey=[REDACTED]
    -Dappdynamics.agent.accountName=[REDACTED] -Dappdynamics.controller.hostName=[REDACTED]
    -Dappdynamics.controller.port=443 -Dappdynamics.controller.ssl.enabled=true -Dhttp.port=$PORT"
    $PWD/.java-buildpack/jboss/bin/standalone.sh -b 0.0.0.0'

EOF